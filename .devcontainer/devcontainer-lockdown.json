{
  "name": "ChangeOnt - Lockdown (Airgapped)",
  "build": { "dockerfile": "Dockerfile" },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/ChangeOnt",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/ChangeOnt,type=bind,consistency=cached",
  "runArgs": [
    "--network=none",
    "--cap-drop=ALL",
    "--security-opt=no-new-privileges",
    "--pids-limit=512",
    "--memory=4g",
    "--cpus=3"
  ]
}
